generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId        Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  activity      String
  age           Int
  gender        String
  height        Int
  weight        Int
  calorieTarget Int
  proteinTarget Float
  fatTarget     Float
  carbTarget    Float
  goal          String   @default("standard")
  createdAt     DateTime @default(now())

  mealLogs      MealLog[]
}

model Food {
  foodId                  Int     @id @default(autoincrement())
  foodName                String
  caloricvalue            Float
  fat                     Float
  saturatedfats           Float
  monounsaturatedfats     Float
  polyunsaturatedfats     Float
  carbohydrates           Float
  sugars                  Float
  protein                 Float
  dietaryfiber            Float
  cholesterol             Float
  sodium                  Float
  water                   Float
  vitamina                Float
  vitaminb1               Float
  vitaminb11              Float
  vitaminb12              Float
  vitaminb2               Float
  vitaminb3               Float
  vitaminb5               Float
  vitaminb6               Float
  vitaminc                Float
  vitamind                Float
  vitamine                Float
  vitamink                Float
  calcium                 Float
  copper                  Float
  iron                    Float
  magnesium               Float
  manganese               Float
  phosphorus              Float
  potassium               Float
  selenium                Float
  zinc                    Float
  nutritiondensity        Float

  mealLogItems            MealLogItem[]
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}

model MealLog {
  MealLogId  Int           @id @default(autoincrement())
  userId     Int
  user       User          @relation(fields: [userId], references: [userId])
  date       DateTime
  mealType   MealType
  notes      String?

  items      MealLogItem[]
}

model MealLogItem {
  MealLogItemid Int     @id @default(autoincrement())
  mealLogId     Int
  mealLog       MealLog @relation(fields: [mealLogId], references: [MealLogId])
  foodId        Int
  food          Food    @relation(fields: [foodId], references: [foodId])
  quantity      Float
}